@model MovieGallery.Models.Movie

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = @Model.DisplayText;
}

<h1>@Model.MovieName</h1>

<div class="row">
    <div class="col-md-6">
        <div class="jumbotron">
            <h6><b>Movie:</b> @Model.MovieName</h6>
            <h6><b>Director:</b> @Model.Director</h6>
            <h6><b>Favorite:</b> @(Model.Favorite ? "Yes" : "No")</h6>
            @if (Model.Cast.Length > 0)
            {
                <h6><b>Cast: </b></h6>
                <ul>
                    @foreach (var c in Model.Cast)
                    {
                        <li><b>@c.ArtistName</b> : @c.Role</li>
                    }
                </ul>
            }
        </div>
        <h6><b>Description: </b></h6>
        <div>@Model.Description</div>
    </div>
    <div class="col-md-6">
        <img src="/Images/@Model.MoviePoster" class="img-fluid" alt="@Model.MoviePoster"/>
    </div>
</div>




